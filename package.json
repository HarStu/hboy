{
  "name": "h_gb",
  "version": "1.0.0",
  "description": "Game Boy emulator written in TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --sourcemap",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "bun run build && bun run build:types",
    "start": "bun dist/index.js",
    "start:dev": "bun src/index.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "gameboy",
    "emulator",
    "typescript",
    "retro-gaming"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}